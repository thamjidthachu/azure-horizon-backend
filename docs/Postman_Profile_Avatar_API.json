{
    "info": {
        "name": "User Profile & Avatar Update API",
        "description": "Collection for testing user profile and avatar update endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "access_token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set('access_token', jsonData.access);",
                                    "    pm.collectionVariables.set('refresh_token', jsonData.refresh);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"your_username_or_email\",\n    \"password\": \"your_password\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login",
                                ""
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"newuser\",\n    \"email\": \"newuser@example.com\",\n    \"phone\": \"+1234567890\",\n    \"full_name\": \"New User\",\n    \"password\": \"securepassword123\",\n    \"password2\": \"securepassword123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/register/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register",
                                ""
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Profile Management",
            "item": [
                {
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile",
                                ""
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Update Profile (PATCH - Partial)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"full_name\": \"Updated Full Name\",\n    \"phone\": \"+9876543210\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/update/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile",
                                "update",
                                ""
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Update Profile (PUT - Full)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"updatedusername\",\n    \"full_name\": \"Updated Full Name\",\n    \"email\": \"updated@example.com\",\n    \"phone\": \"+1111111111\",\n    \"gender\": \"M\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/update/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile",
                                "update",
                                ""
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Update Email Only",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"newemail@example.com\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/update/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile",
                                "update",
                                ""
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Update Username Only",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"newusername\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/update/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile",
                                "update",
                                ""
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Avatar Management",
            "item": [
                {
                    "name": "Upload Avatar (PUT)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "avatar",
                                    "type": "file",
                                    "src": "/path/to/your/image.jpg",
                                    "description": "Select an image file (JPEG, PNG, GIF, or WebP)"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/avatar/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile",
                                "avatar",
                                ""
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Upload Avatar (PATCH)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "avatar",
                                    "type": "file",
                                    "src": "/path/to/your/image.jpg",
                                    "description": "Select an image file (JPEG, PNG, GIF, or WebP)"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/avatar/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile",
                                "avatar",
                                ""
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Delete Avatar",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/avatar/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile",
                                "avatar",
                                ""
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Error Cases",
            "item": [
                {
                    "name": "Update Profile - Duplicate Username",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"existing_username\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/update/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile",
                                "update",
                                ""
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Update Profile - Duplicate Email",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"existing@example.com\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/update/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile",
                                "update",
                                ""
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Update Profile - No Auth",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"full_name\": \"Should Fail\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/update/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile",
                                "update",
                                ""
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Delete Avatar - No Avatar",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/avatar/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "profile",
                                "avatar",
                                ""
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ]
}